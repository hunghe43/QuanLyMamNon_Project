@model QuanLyMamNon.Models.NhanVien

<div class="col-lg-12">
    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Thêm nhân viên
    </button>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm())
                                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Thêm mới nhân viên</h4>
                    </div>
                                        <div class="modal-body">

                                            @Html.AntiForgeryToken()
                                            <div class="form-group">
                                                @Html.AntiForgeryToken()
                                                <div class="col-md-10">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.MaNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.TenNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.TenNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.TenNhanVien, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.Sdt, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.MaChucVu, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.MaChucVu, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.MaChucVu, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.MaLop, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.EditorFor(model => model.MaLop, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    @Html.ValidationMessageFor(model => model.MaLop, "", new { @class = "text-danger" })
                                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Create" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                                        </div>
                }
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>