@model QuanLyMamNon.Models.DichVuNgoai
@using (Html.BeginForm("Update", "DichVuNgoai", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class="modal-title" id="myModalLabel">Update</h1>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x=>x.MaDichVu)
        <label> Tên dịch vụ</label>(<i class="fa fa-star" style="color:red"></i>)
        <div class="form-group input-group input-group">
            <span class="input-group-addon">
                <i class="fa fa-cutlery"></i>
            </span>
            @Html.TextBoxFor(x => x.TenDV, new { @class = "form-control", @data_error = "Please enter name field.", @placeholder = "Nhập tên dịch vu...", @required = "required" })
        </div>
        <label> Chi phí</label>(<i class="fa fa-star" style="color:red"></i>)
        <div class="form-group input-group input-group">
            <span class="input-group-addon">
                <i class="fa fa-money"></i>
            </span>
            @Html.TextBoxFor(x => x.ChiPhi, new { @class = "form-control", @placeholder = "Chi phí...", @required = "required"    })
        </div>
        <label> Ghi chú</label>(<i class="fa fa-star" style="color:red"></i>)
        <div class="form-group input-group input-group">
            <span class="input-group-addon">
                <i class="fa fa-comment"></i>
            </span>

            @Html.TextAreaFor(x => x.GhiChu, new { @class = "form-control", @placeholder = "Ghi chú..." })

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
    </div>
}