@using QuanLyMamNon.Models
  <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Xin Chào @ViewBag.TenGVCN !</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Thông tin chi tiết </h2>
            </div>
            <h4>Lớp: @ViewBag.TenLop</h4>
            <h4>Sỹ số: @ViewBag.Siso</h4>
            <div class="panel-body">
                <div class="col-lg-4">
                    <h4>Giáo viên chủ nhiệm: @ViewBag.TenGVCN</h4>
                    <address>
                        <p>Liên hệ</p>
                        <br>@ViewBag.DiaChi
                        <br>
                        <abbr title="Phone">Phone:</abbr>@ViewBag.Sdt
                    </address>
                    <address>
                        <strong>Email</strong>
                        <br>
                        <a href="mailto:#">@ViewBag.Email</a>
                    </address>
                </div>
                @foreach (var gvp in (List<Infor_GiaoVien>)ViewData["List GVP"])
                {
                    <div class="col-lg-4">
                        <h4>Giáo viên phụ: @gvp.TenGiaoVien</h4>
                        <address>
                            <p>Liên hệ</p>
                            <br>@gvp.DiaChi
                            <br>
                            <abbr title="Phone">Phone:</abbr>@gvp.Sdt
                        </address>
                        <address>
                            <strong>Email</strong>
                            <br>
                            <a href="mailto:#">@gvp.Email</a>
                        </address>
                    </div>
                }

                <div class="col-lg-4">
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>