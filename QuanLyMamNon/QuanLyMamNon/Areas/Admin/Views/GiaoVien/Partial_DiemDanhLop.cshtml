    $(function() {
        $('#btn_view').click(function() {
            debugger;
            var date = $('#dateValue').val();
            if (date && date != '') {
                $.ajax({
                    url: '@Url.Action("Partial_DiemDanhLop")',
                    type: 'GET',
                    cache: false,
                    data: { date: date }
                }).done(function(result) {
                    $('#result').html(result);
                });
