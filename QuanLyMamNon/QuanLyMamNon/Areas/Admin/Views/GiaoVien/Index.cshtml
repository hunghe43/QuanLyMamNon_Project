@using QuanLyMamNon.Models
@model QuanLyMamNon.Models.Infor_GiaoVien
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
  
    <!-- /.row -->   
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Xin Chào @Model.TenGiaoVien !</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-8 text-left">
                            <div><i class="fa fa-info fa-2x"> Lớp @Model.TenLop</i></div>
                            <div><i class="fa fa-slack"> Sỉ số @Model.Siso</i></div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @foreach (var gvp in (List<Infor_GiaoVien>)ViewData["List GVP"])
                    {
                        <div class="col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Giáo viên: @gvp.TenGiaoVien
                                </div>
                                <div class="panel-body">
                                    <address>
                                        <p>Địa chỉ: @gvp.DiaChi</p>
                                        <abbr title="Phone">Phone:</abbr>@gvp.Sdt
                                    </address>
                                    <address>
                                        <strong>Email:</strong>
                                        <a href="mailto:#">@gvp.Email</a>
                                    </address>
                                </div>

                            </div>
                        </div>
                    }

                    <div class="col-lg-4">
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div id="result">
        <!-- /.row -->
        @Html.Action("Partial_DiemDanhLop", "GiaoVien","")
    </div>
        @Html.Action("Partial_DanhSachHocSinh", "GiaoVien",Model)
</div>
<!-- /#page-wrapper -->
