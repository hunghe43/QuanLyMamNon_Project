@using QuanLyMamNon.Models
@model QuanLyMamNon.Models.HocSinh
@{
    ViewBag.Title = "HocPhiHocSinh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-anchor fa-fw"></i>Trang chủ kế toán</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <p></p>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tính học phí học sinh @Model.Ten</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <!-- /.col-lg-8 -->
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-bell fa-fw"></i> Thông tin chi tiết học sinh
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading">

                                        <i class="fa fa-comment fa-fw"></i> Thông tin học sinh
                                        <span class="pull-right text-muted small">
                                        </span>

                                    </div>
                                    <div class="list-group">                                       
                                        <a class="list-group-item">
                                            <i class="fa fa-child fa-fw"></i> Họ tên: @Model.Ten
                                            <i class="fa fa-calendar fa-fw"></i> Ngày sinh: @Model.NgaySinh.ToShortDateString()
                                            <i class="fa fa-leaf fa-fw"></i> Giới tính: @Model.GioiTinh
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                        <a class="list-group-item">
                                            <i class="fa fa-home fa-fw"></i> Địa chỉ: @Model.DiaChi
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                        <a class="list-group-item">
                                            <i class="fa fa-arrows-v fa-fw"></i> Chiều cao: @Model.ChieuCao cm<i class="fa fa-arrows-h fa-fw"></i> Cân Nặng: @Model.CanNang kg
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>

                                        <a class="list-group-item">
                                            <i class="fa fa-shopping-cart fa-fw"></i> Tình trạng:@Model.TinhTrang
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading">

                                        <i class="fa fa-comment fa-fw"></i> Thông tin phụ huynh
                                        <span class="pull-right text-muted small">
                                        </span>

                                    </div>
                                    <div class="list-group">
                                       
                                        <a class="list-group-item">
                                            <i class="fa fa-user fa-fw"></i> Họ tên: @Model.TenPhuHuynh
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                        <a class="list-group-item">
                                            <i class="fa fa-calendar fa-fw"></i> Ngày sinh: @Model.NgaySinhPhuHuynh.ToShortDateString()
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                        <a class="list-group-item">
                                            <i class="fa fa-phone fa-fw"></i> Tel: @Model.Sdt
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                        <a class="list-group-item">
                                            <i class="fa fa-envelope fa-fw"></i> Email: @Model.Email
                                            <span class="pull-right text-muted small">
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-4 -->
        </div>
        <div id="resultHocPhi">
            <!-- /.row -->
            @Html.Action("Partial_CT_HocPhi", "KeToan")
        </div>

    </p>
