<div class="row">
    <!-- /.col-lg-8 -->
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bell fa-fw"></i> Chi tiết học phí
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
