@using QuanLyMamNon.Models
@model QuanLyMamNon.Models.Dao.ViewModelDanhSachHS

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý học sinh</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12" style="margin-top:20px">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <i class="fa fa-th-list fa-2x">  Danh sách học sinh chờ phê duyệt</i>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Họ Tên
                                </th>
                                <th>
                                    Ngày Sinh
                                </th>
                                <th>
                                    Địa Chỉ
                                </th>
                                <th>
                                    Chiều cao
                                </th>
                                <th>
                                    Cân nặng
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listHocSinhDis)
                            {
                            <tr>
                                <td>
                                    @item.MaHocSinh
                                </td>
                                <td>
                                    @item.Ten
                                </td>
                                <td>
                                    @item.NgaySinh.ToShortDateString()
                                </td>
                                <td>
                                    @item.DiaChi
                                </td>
                                <td>
                                    @item.ChieuCao
                                </td>
                                <td>
                                    @item.CanNang
                                </td>
                                <td>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-bitbucket Details_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-info"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-github Update_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-edit"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-pinterest Delete_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-12" style="margin-top:20px">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <i class="fa fa-th-list fa-2x">  Danh sách học sinh</i>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <button class="btn btn-primary add_HocSinh">
                                Thêm học sinh
                            </button>
                        </div>

                        <div class="col-lg-4 col-sm-4 col-12">
                            <p></p>
                            <div class="input-group">
                                @using (Html.BeginForm("ImportFileHocSinh", "HocSinh", FormMethod.Post, new { @class = "input-group", @enctype = "multipart/form-data" }))
                                {

                                    <label class="input-group-btn">
                                        <span class="btn btn-primary">
                                            Browse… <input type="file" name="postedFile" style="display: none;" multiple="" required>
                                        </span>
                                    </label>
                                    <input type="text" class="form-control" readonly="" required>
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-primary">
                                            <!-- /change to submit... -->
                                            <i class="fa fa-download"></i>
                                        </button>
                                    </span>

                                }
                            </div>
                            <p></p>

                        </div>

                        <div class="col-lg-4">
                            @using (Html.BeginForm("Index", "HocSinh", FormMethod.Get, new { @class = "header-search-box", @style = "text-align:right" }))
                            {
                                <p>
                                </p><div class="form-inline">
                                    <div class="input-group">
                                        @Html.DropDownListFor(x => x.listLop, new SelectList(Model.listLop, "MaLop", "TenLop"), "Tất cả", new { @class = "form-control selectedValue" })
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="submit">Hiển thị</button>
                                        </span>
                                    </div><!-- /input-group -->

                                </div>
                                <p></p>
                            }
                        </div>
                    </div>

                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example2">
                        <thead>
                            <tr>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Họ Tên
                                </th>
                                <th>
                                    Ngày Sinh
                                </th>
                                <th>
                                    Địa Chỉ
                                </th>
                                <th>
                                    Chiều cao
                                </th>
                                <th>
                                    Cân nặng
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listHocSinh)
                        {
                            <tr>
                                <td>
                                    @item.MaHocSinh
                                </td>
                                <td>
                                    @item.Ten
                                </td>
                                <td>
                                    @item.NgaySinh.ToShortDateString()
                                </td>
                                <td>
                                    @item.DiaChi
                                </td>
                                <td>
                                    @item.ChieuCao
                                </td>
                                <td>
                                    @item.CanNang
                                </td>
                                @*@item.NgaySinhPhuHuynh.GetValueOrDefault().ToShortDateString()*@
                                <td>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-bitbucket DangKyDV_HocSinh" data-id="@item.MaHocSinh"><i class="fa  fa-plus-circle"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-bitbucket Details_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-info"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-github Update_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-edit"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-social-icon btn-pinterest Delete_HocSinh" data-id="@item.MaHocSinh"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <div class="modal fade" id="myModal_detailsHocSinh" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog" style="width: 800px;">
                        <div class="modal-content" id="myModalContent">
                            <!-- Partial view Add,detail,update in here -->
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

<script>
    //get selected in dropdown list when submit "hiển thị"
    $('.selectedValue option[value=@ViewBag.select]').attr('selected', 'selected');
    $(document).ready(function () {
        // do get Add HocSinh
        $(".add_HocSinh").click(function () {
            
            var add_HocSinh_url = '@Url.Action("Add", "HocSinh")';
            var $buttonClicked = $(this);
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: add_HocSinh_url,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    
                    $('#myModalContent').html(data);
                    $('#myModal_detailsHocSinh').modal(options);
                    $('#myModal_detailsHocSinh').modal('show');
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });

        // do get details HocSinh
        $(".Details_HocSinh").click(function () {
            
            var detaisl_HocSinh_url = '@Url.Action("Detail", "HocSinh")';
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: detaisl_HocSinh_url,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id },
                datatype: "json",
                success: function (data) {
                    
                    $('#myModalContent').html(data);
                    $('#myModal_detailsHocSinh').modal(options);
                    $('#myModal_detailsHocSinh').modal('show');
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });


        // do get edit HocSinh
        $(".Update_HocSinh").click(function () {
            
            var update_HocSinh_url = '@Url.Action("Update", "HocSinh")';
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: update_HocSinh_url,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id },
                datatype: "json",
                success: function (data) {
                    
                    $('#myModalContent').html(data);
                    $('#myModal_detailsHocSinh').modal(options);
                    $('#myModal_detailsHocSinh').modal('show');
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });
        // do post delete HocSinh
        $(".Delete_HocSinh").click(function () {
            
            var delete_HocSinh_url = '@Url.Action("Delete", "HocSinh")';
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            if (confirm("Bạn chắc chăn muốn xóa Item này?")) {
                $.ajax({
                    url: delete_HocSinh_url,
                    data: { Id: id },
                    type: 'POST',
                    dataType: 'json',
                    traditional: true,
                    success: function (data) {
                        alert('Xóa thành công');
                        location.reload();
                    },
                    error: function (xhr) {
                        $('#myModalContent').html(data);
                        $('#myModal_detailsHocSinh').modal(options);
                        $('#myModal_detailsHocSinh').modal('show');
                        alert('Xóa không thành công');
                    }
                });
            } else
                return false;
        });

        // do get dang ky dich vu HocSinh
        $(".DangKyDV_HocSinh").click(function () {
            
            var DangKyDV_HocSinh_url = '@Url.Action("DangKyDichVu", "HocSinh")';
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            var dateObj = new Date();
            var month = dateObj.getUTCMonth() + 1; //months from 1-12
            var day = dateObj.getUTCDate();
            var year = dateObj.getUTCFullYear();
            newdate = day + "/" + year;
            $.ajax({
                type: "GET",
                url: DangKyDV_HocSinh_url,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id, "date": newdate },
                datatype: "json",
                success: function (data) {
                    $('#myModalContent').html(data);
                    $('#myModal_detailsHocSinh').modal(options);
                    $('#myModal_detailsHocSinh').modal('show');
                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });
    });

</script>
