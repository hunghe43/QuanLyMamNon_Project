@using QuanLyMamNon.Models
@model QuanLyMamNon.Models.Dao.ViewModelDanhSachHS

@using (Html.BeginForm("Add", "HocSinh", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Thêm mới</h4>
    </div>
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <label>Họ tên</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.Ten, new { @class = "form-control", @placeholder = "Nhập tên..." })
                    </div>
                    <label>Ngày sinh</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-home"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.NgaySinh, new { @class = "form-control", @placeholder = "Ngày sinh..." })
                    </div>
                    <label>Giới tính</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-home"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.GioiTinh, new { @class = "form-control", @placeholder = "Giới tính..." })
                    </div>
                    <label>Địa chỉ</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-home"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.DiaChi, new { @class = "form-control", @placeholder = "Địa chỉ..." })
                    </div>
                    <label>Chiều cao, cân nặng</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.ChieuCao, new { @class = "form-control", @placeholder = "Chiều cao..." })
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.CanNang, new { @class = "form-control", @placeholder = "Cân nặng..." })
                    </div>
                   
                </div>
                <div class="col-lg-6">
                    <label>Tên phụ huynh</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.TenPhuHuynh, new { @class = "form-control", @placeholder = "Tên phụ huynh..." })
                    </div>
                    <label>Ngày sinh</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.NgaySinhPhuHuynh, new { @class = "form-control", @placeholder = "Ngày sinh..." })
                    </div>
                    <label>Số chứng minh thư</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.SoCmt, new { @class = "form-control", @placeholder = "Số chứng minh thư..." })
                    </div>
                    <label>Số điện thoại</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.Sdt, new { @class = "form-control", @placeholder = "Số điện thoại..." })
                    </div>
                    <label>Email</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.Email, new { @class = "form-control", @placeholder = "Email..." })
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group input-group" name="Add_MaLop">
                        <label>Chọn lớp học</label>
                        @Html.DropDownListFor(x => x.hocsinh.MaLop, new SelectList(Model.listLop, "MaLop", "TenLop", 0), "None", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <label>Tình trạng hoạt động </label>
                    <div class="form-group input-group">
                       
                        @Html.CheckBoxFor(x => x.hocsinh.TrangThai)                     
                    </div>
                </div>
                <div class="col-lg-12">
                    <label>Ghi chú</label>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        @Html.TextBoxFor(x => x.hocsinh.GhiChu, new { @class = "form-control", @placeholder = "Ghi chú..." })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary">Thêm mới</button>
        </div>
}
